{
  "manifest_version": 3,
  "name": "Universal Text Highlighter",
  "version": "1.0",
  "description": "A tool to highlight and save text from web pages",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/highlighter.png"
    }
  },
  "icons": {
    "16": "icons/highlighter.png"
  }
}
